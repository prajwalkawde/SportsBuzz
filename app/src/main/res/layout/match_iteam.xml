<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/loutMain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/cardview"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/match_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/museo_regular"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="@string/India_t20"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/l"
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:layout_below="@+id/match_name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:alpha="0.1"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/fullteamname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/team1_full"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:fontFamily="@font/museo_regular"
                    android:text="@string/mumbai_indians"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/team2_full"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/museo_regular"
                    android:gravity="end"
                    android:text="@string/mumbai_indians"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fullteamname"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/team1_image"

                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp" />

                        <TextView
                            android:id="@+id/team_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="1"

                            android:fontFamily="@font/museo_bold"
                            android:gravity="center"
                            android:text="GKH"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="01"
                            android:textColor="@android:color/holo_red_dark"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <cn.iwgang.countdownview.CountdownView
                                android:id="@+id/mycountdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:visibility="gone"
                                app:isHideTimeBackground="true"
                                app:isShowDay="true"
                                app:isShowHour="true"
                                app:isShowMinute="true"
                                app:isShowSecond="true"
                                app:isTimeTextBold="true"
                                app:suffixTextColor="#000000"
                                app:suffixTextSize="25dp"
                                app:timeBgColor="#00BB86FC"
                                app:timeTextColor="#FF0000"
                                app:timeTextSize="10sp" />

                            <TextView
                                android:id="@+id/text_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:text="01"
                                android:textColor="@android:color/holo_red_dark"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/text_minute"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/museo_regular"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="01"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_seconds"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="1dp"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="01"
                                android:textColor="@android:color/holo_red_dark"
                                android:visibility="gone" />
                        </LinearLayout>

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:numStars="5"
                            android:progressTint="@color/grad_2"
                            android:rating="3.5"
                            android:saveEnabled="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/team_name2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:layout_weight="1"

                            android:fontFamily="@font/museo_bold"
                            android:gravity="center"
                            android:text="GKH"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/team2_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/layout"
                android:background="@drawable/bg_buttome_matchlist"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_dot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/round_shimmer"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/match_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/museo_regular"
                    android:gravity="center_vertical"
                    android:text="Covering.."
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/team_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/museo_regular"
                    android:gravity="right"
                    android:text="Team Coming Soon.."
                    android:textColor="#F87C7C"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_below="@+id/layout"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/c"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/red_round"
                    android:gravity="center|center_vertical"
                    android:text="C"
                    android:textColor="@color/redText"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/t"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/red_round"
                    android:gravity="center|center_vertical"
                    android:text="P"
                    android:textColor="@color/redText"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/p"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/red_round"
                    android:gravity="center|center_vertical"
                    android:text="T"
                    android:textColor="@color/redText"
                    android:textSize="11sp" />

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/dummy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:gravity="center"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
