<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">


    <LinearLayout
        android:id="@id/loutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgTeam1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp" />

                <com.fantasy.team.prediction.util.font.BoldTextView
                    android:id="@+id/txtTeam1Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nowayregular"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="horizontal">

                    <com.fantasy.team.prediction.util.font.RegularTextView
                        android:id="@+id/txtSerisName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/museo_regular"
                        android:gravity="center"
                        android:text="Match 1"
                        android:textColor="#141414"
                        android:textSize="10dp"

                        />

                    <com.fantasy.team.prediction.util.font.MediumTextView
                        android:id="@+id/txtNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:text="SampleText"
                        android:textColor="@color/redText"
                        android:textSize="9sp"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:src="@drawable/vs" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <com.fantasy.team.prediction.util.font.MediumTextView
                        android:id="@+id/txtDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nowayregular"
                        android:gravity="center"
                        android:text="23 March 2019"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <com.fantasy.team.prediction.util.font.MediumTextView
                        android:id="@+id/txtViewsCount"
                        android:layout_width="3dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:gravity="center_horizontal"
                        android:text=""
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="9dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/id_sd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nowayregular"
                        android:gravity="center"
                        android:text="MA Chidambaram Stadium ,Chennai"
                        android:textSize="10dp"
                        android:textStyle="italic" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgTeam2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    />

                <com.fantasy.team.prediction.util.font.BoldTextView
                    android:id="@+id/txtTeam2Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nowayregular"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="@color/black" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/bg"
            android:gravity="center"
            android:orientation="horizontal">

            <com.fantasy.team.prediction.util.font.BoldTextView
                android:id="@+id/txtNote2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:text="Preview: &#10060; | Pre Toss Team: &#10060; | Final Team: &#10060;"
                android:textSize="10sp"
                app:fontFamily="@font/museo_regular" />


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>